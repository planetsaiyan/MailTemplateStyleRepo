<mjml>
  <mj-head>
    <mj-attributes>
      <!-- <mj-text font-size="16px" align="center"/> -->
      <mj-text align="center"/>
      <mj-class name="sm-white-text" font-size="14px" color="#fff"/>
      <mj-class name="bg-color-darkgray" background-color="darkgray"/>
      <mj-class name="bg-color-lightgray" background-color="lightgray"/>
    </mj-attributes>
  </mj-head>

  <mj-body>
    <mj-container background-color="#fff">
      <mj-include path="./header" />
      <mj-section padding-top="0px" padding-bottom="0px">
        <mj-column>
          <mj-text color="gray" font-size="16px">
            Your new home starts with a great plan!
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section background-color="lightgray" padding-top="5px" padding-bottom="5px">
